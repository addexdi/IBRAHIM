                }
            }

            function getChoice(intValue) {
                document.getElementById("choice").value = intValue;
                var form = document.getElementById("oob form");
                form.submit();
            }

            function opgsub() {
                var amt =
                    $("#data-bundles").find(':selected').attr('data-amount');
                if (amt) {
                    $("#productamount").val(amt);
                    $("#oobform").attr('action',
                        "https://9mobile.com.ng/opg/data/").submit();
                } else {
                    alert("select data bundle")
                }
            }
