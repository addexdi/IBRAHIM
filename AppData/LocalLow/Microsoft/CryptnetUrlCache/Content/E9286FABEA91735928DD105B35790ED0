        <script>

            function getTimedBundle() {

                var opt = document.getElementById('timed-bundles').value;

                switch (opt) {
                    case "1"://5 Minutes
                        document.getElementById('code').value = '248';
                        document.getElementById('amount').value = '30';
                        break;
                    case "2":
                        document.getElementById('code').value = '249';
                        document.getElementById('amount').value = '50';
                        break;
                    case "3":
                        document.getElementById('code').value = '250';
                        document.getElementById('amount').value = '70';
                        break;
                    case "4":
                        document.getElementById('code').value = '251';
                        document.getElementById('amount').value = '120';
                        break;
                    case "5":
                        document.getElementById('code').value = '252';
                        document.getElementById('amount').value = '200';
                        break;
                    case "6":
                        document.getElementById('code').value = '253';
                        document.getElementById('amount').value = '350';
                        break;
                    default:
                        break;
                }

                var amount = document.getElementById("amount").value;
                document.getElementById('category').value = '6';

                if (confirm("You will be charged =N=" + amount + " for this plan.\nDo you wish to continue ?")) {
                    document.getElementById("choice").value = '0';
                    var form = document.getElementById("oobform");
                    form.submit();
                } else {
                    // Do nothing !
                    }
            }

            function getTopupBundle() {

                var opt = document.getElementById('topup-bundles').value;

                switch (opt) {
                    case "1":
                        document.getElementById('code').value = '216';
                        document.getElementById('amount').value = '100';
                        break;
                    case "2":
                        document.getElementById('code').value = '217';
                        document.getElementById('amount').value = '150';
                        break;
                    case "3":
                        document.getElementById('code').value = '215';
                        document.getElementById('amount').value = '250';
                        break;
                    case "4":
                        document.getElementById('code').value = '218';
                        document.getElementById('amount').value = '500';
                        break;
                    case "5":
                        document.getElementById('code').value = '235';
                        document.getElementById('amount').value = '10';
                        break;
                    default:
                        break;
                }

                var amount = document.getElementById("amount").value;
                document.getElementById('category').value = '2';

                if (confirm("You will be charged =N=" + amount + " for this plan.\nDo you wish to continue ?")) {
                    document.getElementById("choice").value = '0';
                    var form = document.getElementById("oobform");
                    form.submit();
                } else {
                    // Do nothing!
                }
            }

            function getDataBundle() {

                var opt = document.getElementById('data-bundles').value;
                if (opt > 0) {
                    switch (opt) {
                        case "14"://5 Minutes
                            document.getElementById('code').value = '248';
                            document.getElementById('amount').value = '30';
                            break;
                        case "1"://25MB
                            document.getElementById('code').value = '222';
                            document.getElementById('amount').value = '50';
                            break;
                        case "2"://100MB Daily
                            document.getElementById('code').value = '7';
                            document.getElementById('amount').value = '100';
                            break;
                        case "3"://250MB Weekly
                            document.getElementById('code').value = '125';
                            document.getElementById('amount').value = '200';
                            break;
                        case "4"://500MB Monthly
                            document.getElementById('code').value = '126';
                            document.getElementById('amount').value = '500';
                            break;
                        case "15"://650MB Daily
                            document.getElementById('code').value = '258';
                            document.getElementById('amount').value = '200';
                            break;
                        case "12"://1.5GB Monthly
                            document.getElementById('code').value = '246';
                            document.getElementById('amount').value = '1000';
                            break;
                        case "5"://2GB
                            document.getElementById('code').value = '252';
                            document.getElementById('amount').value = '1200';
                            break;
                        case "13"://4.5GB
                            document.getElementById('code').value = '247';
                            document.getElementById('amount').value = '2000';
                            break;
                        case "7"://11GB
                            document.getElementById('code').value = '256';
                            document.getElementById('amount').value = '4000';
                            break;
                        case "9"://40GB
                            document.getElementById('code').value = '250';
                            document.getElementById('amount').value = '10000';
                            break;
                        case "22"://15GB
                            document.getElementById('code').value = '257';
                            document.getElementById('amount').value = '5000';
                            break;
                        case "16"://1GB Daily + Social
                            document.getElementById('code').value = '259';
                            document.getElementById('amount').value = '300';
                            break;
                        case "17"://2GB 3-Days + Social
                            document.getElementById('code').value = '260';
                            document.getElementById('amount').value = '500';
                            break;
                        case "18"://1GB Weekly + Social
                            document.getElementById('code').value = '261';
                            document.getElementById('amount').value = '500';
                            break;
                        case "19"://7GB Weekly + Social
                            document.getElementById('code').value = '262';
                            document.getElementById('amount').value = '1500';
                            break;
                        case "20"://3GB monthly + Social
                            document.getElementById('code').value = '263';
                            document.getElementById('amount').value = '1500';
                            break;
                        case "21"://75GB Monthly
                            document.getElementById('code').value = '264';
                            document.getElementById('amount').value = '15000';
                            break;
                        default:
                            break;
                    }

                    var amount = document.getElementById("amount").value;
                    document.getElementById('category').value = '1';

                    if (confirm("You will be charged =N=" + amount + " for this plan.\nDo you wish to continue ?")) {
                        document.getElementById("choice").value = '0';
                        var form = document.getElementById("oobform");
                        form.submit();
                    } else {
                        // Do nothing!
                    }
                } // end of if value
                    else {
                    alert("Please Select a Data Plan to purchase")
                }
            }

            function getFlexBundle() {

                var opt = document.getElementById('flex-bundles').value;

                switch (opt) {
                    case "1":
                        document.getElementById('code').value = '153';
                        document.getElementById('amount').value = '2000';
                        break;
                    case "2":
                        document.getElementById('code').value = '155';
                        document.getElementById('amount').value = '5000';
                        break;
                    case "3":
                        document.getElementById('code').value = '158';
                        document.getElementById('amount').value = '10000';
                        break;
                    default:
                        break;
                }

                var amount = document.getElementById("amount").value;
                document.getElementById('category').value = '4';

                if (confirm("You will be charged =N=" + amount + " for this plan.\nDo you wish to continue ?")) {
                    document.getElementById("choice").value = '0';
