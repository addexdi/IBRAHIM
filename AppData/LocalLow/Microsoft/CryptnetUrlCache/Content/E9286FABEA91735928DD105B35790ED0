                            <script type="text/javascript">
                                function changeBundle() {
                                    $('#10mb').hide();
                                    $('#50mb').hide();
                                    $('#200mb').hide();
                                    $('#500mb').hide();
                                    $('#1k5gb').hide();
                                    $('#3k5gb').hide();
                                    $('#6k5gb').hide();
                                    $('#16gb').hide();
                                    $('#22gb').hide();
                                    $('#42gb').hide();

                                    var i;
                                    for (i = 2; i < 21; i++) {
                                        var divNone = '#' + i + 'gb';
                                        $(divNone).hide();
                                    }

                                    var opt = document.getElementById('data-bundles').value;

                                    switch (opt) {
                                        case "1":
                                            $('#10mb').show();
                                            break;
                                        case "2":
                                            $('#50mb').show();
                                            break;
                                        case "3":
                                            $('#200mb').show();
                                            break;
                                        case "4":
                                            $('#500mb').show();
                                            break;
                                        case "5":
                                            $('#1k5gb').show();
                                            break;
                                        case "6":
                                            $('#3k5gb').show();
                                            break;
                                        case "7":
                                            $('#6k5gb').show();
                                            break;
                                        case "8":
                                            $('#16gb').show();
                                            break;
                                        case "9":
                                            $('#22gb').show();
                                            break;
                                        case "10":
                                            $('#42gb').show();
                                            break;
                                        default:
                                            break;
                                    }
                                }
                                $(document).ready(function () {
                                    changeBundle();
                                });
                            </script>
